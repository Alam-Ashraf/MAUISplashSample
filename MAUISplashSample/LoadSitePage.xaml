<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUISplashSample.LoadSitePage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Title="LoadSitePage">
    <StackLayout>
        <ActivityIndicator x:Name="LoaderView" HeightRequest="50" WidthRequest="50" IsRunning="True" Color="Black" IsVisible="True"/>
        <WebView HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand"
                 Loaded="WebView_Loaded"
                 Source="https://eevaappdev.dataisalive.com/"/>
    </StackLayout>
        
</ContentPage>
